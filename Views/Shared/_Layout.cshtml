    <script>
        function sleep(milliseconds) {
            const date = Date.now();
            let currentDate = null;
            do {
                currentDate = Date.now();
            } while (currentDate - date < milliseconds);
        }

        var ReservationFound = "@ViewBag.ReservationFound";
        var PaymentProcessed = "@ViewBag.PaymentProcessed";

        $('.loader-screen').fadeIn(100);

        function beginRegistration() {
            $('#divSplash').fadeOut(200);
            $('#mainDiv').fadeIn(800);
        }

        window.onload = (event) => {
            setTimeout(function () {
                $('.loader-screen').fadeOut(500);
                if (ReservationFound == "True") {
                    if (PaymentProcessed == "True") {

                        if (IsredirectedfromPaymentPage == "True") {
                            if (IsPaymentSuccess == "True") {
                                $('#paymentStatusMessage').html("Your preauthorisation was successful.");
                            }
                            else {
                                $('#paymentStatusMessage').html(PaymentFailureMessage);
                            }
                            $('#paymentStatusModal').modal('show');
                        }

                        $('#mainDiv').fadeIn(800);
                    }
                    else {
                        $('#mainDiv').hide();
                        $('#divSplash').fadeIn(800);
                    }
                }
                else {
                    $('#mainDiv').show();
                    $('#divSplash').hide(800);
                }
            }, 500);
        };


